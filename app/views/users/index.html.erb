
<div class="col-md-4 col-md-offset-4 center profile">
  <%=  render 'shared/page_title' , title: "All Users" %>
</div>
<div class="row"></div>
<div align ="center">
   <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
         <div class="col-md-4  col-md-offset-4 ">
           <li><%= link_to gravatar_for(user), user_path(user) %></li>
           <li class="user-title"><%= link_to user.username, user_path(user) %></li>
           <li><small><%= pluralize(user.posts.count, "posts") if user.posts %></small></li>
           <% if logged_in? && current_user.admin? && !user.admin? %>
             <li><%= link_to "Delete User", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete user and assosciated post?" } %></li>
           <% end  %>
            <hr />
         </div>
        
      </div>
     
    </ul>
  <% end %>
  <%= will_paginate %>
</div>