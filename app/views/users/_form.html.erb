<%= render 'shared/errors', obj: @user  %>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f|  %>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :username, "Name" %>
          </div>
          <div class="col-md-8">
            <%= f.text_field :username, class: "form-control", autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :email %>
          </div>
          <div class="col-md-8">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>
          <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :password %>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
          <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :password_confirmation, "Confirm Password" %>
          </div>
          <div class="col-md-8">
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <%= f.submit(@user.new_record? ? "Create Account" : "Update Account", class: "btn btn-primary btn-lg btn-xlarge")  %>
          </div>
        </div>
      <% end %>
      <div class="col-md-4 col-md-offset-4 colormatch">
        [<%= link_to  "Cancel creating a new post and return to posts listing", posts_path %>]
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>